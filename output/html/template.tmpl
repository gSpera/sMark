<html>

<head>
    <title>{{.Options.Title}}</title>

    {{ if .Options.EnableFont }}<link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">{{ end }}
    <style>
        p.align-left {
            text-align: left;
        }

        p.align-center {
            text-align: center;
        }

        p.align-right {
            text-align: right;
        }
        {{/*
            //Titles:
            //H1: Indent Title
            //H3: Indent Subtitle
            //H2: Title
            //H4: Subtitle
        */}}
        h1 {font-size: 3.5rem; text-align: center;}
        h2 {font-size: 2.5rem;}
        h3 {font-size: 1.5rem; text-align: center;}
        h4 {font-size: 1rem;}
        * {
            font-family: 'Roboto', sans-serif;
            font-size: 1.05rem;
        }
        {{ .Options.InlineCSS }}

    </style>
    {{if .Options.CustomCSS }}
        <link rel="stylesheet" href="{{.Options.CustomCSS}}">
    {{ end }}
</head>

<body>
    {{.Body}}
</body>

</html>